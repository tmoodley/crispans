@model HelpingHands.Models.PurchaseOrder

@{
    ViewData["Title"] = "Create";
}
<section id="intro" class="section-padding">
    <div class="container">
            <h1>Create</h1>

            <h4>Purchase Order</h4>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div class="form-section">
                            <div class="form-header">
                                <h3 class="form-header__heading">Purchase Order Information</h3>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row mb-1">
                                <div class="form-group col-md-6">
                                    <input asp-for="PurchaseOrderNumber" class="form-control" placeholder="PurchaseOrderNumber#" />
                                    <span asp-validation-for="PurchaseOrderNumber" class="text-danger"></span>
                                </div> 
                                <div class="form-group col-md-6">
                                    <input asp-for="Total" class="form-control" placeholder="Total"/>
                                    <span asp-validation-for="Total" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row mb-1">
                                <div class="form-group col-md-6">
                                    <small class="form-text text-muted">PurchaseDate</small>
                                    <input asp-for="PurchaseDate" class="form-control input_height" placeholder="PurchaseDate" />
                                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <small class="form-text text-muted">CustomerId</small>
                                    <select asp-for="CustomerId" class="form-control input_height" value="CustomerId" asp-items="ViewBag.CustomerId"></select>
                                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row mb-1">
                                <div class="form-group col-md-6">
                                    <small class="form-text text-muted">Notes</small>
                                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-section">
                            <div class="form-header">
                                <h3 class="form-header__heading">Enter your Information</h3>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row mb-1">
                                <div class="form-group col-md-6">
                                    <input asp-for="CompanyName" class="form-control" placeholder="Company name" />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <input asp-for="Email" class="form-control" placeholder="Email Address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row mb-1">
                                <div class="form-group col-md-12">
                                    <input asp-for="Address" class="form-control" placeholder="Company name" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
    </div>
</section>

<style>
    .input_height{
        height:50px !important;
    }
    .form-section {
        margin-bottom: 1.875em !important;
    }
    .form-header {
        border-bottom: 1px solid #dfe3e8;
        margin-bottom: 1.875em;
    }

    .trans-navigation {
        background: black;
    }

    table.dataTable thead tr {
        background-color: black;
        color: white;
    }
</style>
