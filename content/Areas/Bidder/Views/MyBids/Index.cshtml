
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Bidder/Views/Shared/_Layout.cshtml";
}

<h3>My Bids</h3>
<hr class="pb-2 pt-1"/>
<section id="intro" class="section-padding">
    <div class="container-fluid">

        
            <table id="myTable" class="pt-3 table">
            </table>
       
       

    </div>
</section>

<style>
        table.dataTable thead tr {
  background-color: black;
  color: white;
}
</style>


@section scripts{
<script>
    $('#myTable').dataTable({
            serverSide: true,
            processing: true,
            ajax: "/Bidder/MyBids/pagedata",
            columns: [
                {
                    name: 'number',
                    data: "number",
                    title: "Number",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'Name',
                    data: "name",
                    title: "Name",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'bs',
                    data: "bidStatus",
                    title: "Bid Status",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'js',
                    data: "jobStatus",
                    title: "Job Status",
                    sortable: true,
                    searchable: false,
                    defaultContent: '<i>Not set</i>'
                },
                ,
                {
                    name: 'src',
                    data: "source",
                    title: "Source",
                    sortable: true,
                    searchable: false
                },

                {
                    title: "Actions",
                    data: null, render: function (data, type, row) {

                        var returnValue = '';

                        if (data.source === 'Tender') {
                            returnValue = '<div >' +
                                '<a class="btn btn-primary" href="/Bidder/MyBids/Details/' + data.id + '">' +
                                'View' +
                                '</a>' +

                                '</div>';
                        } else {
                            returnValue = '<div >' +
                                '<a class="btn btn-primary" href="/Bidder/MyBids/POBidDetails/' + data.id + '">' +
                                'View' +
                                '</a>' +

                                '</div>';
                        }

                        return returnValue;

                    },
                    sortable: false,
                    searchable: false
                }
            ]
        });
</script>
}

