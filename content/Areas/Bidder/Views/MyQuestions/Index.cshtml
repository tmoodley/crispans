
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Bidder/Views/Shared/_Layout.cshtml";

}

<h3>My Questions</h3>
<hr class="pb-2 pt-1" />
<section id="intro" class="section-padding">
    <div class="container-fluid">

        
            <table id="myTable" class="pt-3 table">
            </table>
        


    </div>
</section>

<style>

    table.dataTable thead tr {
        background-color: black;
        color: white;
    }
</style>


@section scripts{
    <script>
    $('#myTable').dataTable({
            serverSide: true,
            processing: true,
            ajax: "/Bidder/MyQuestions/pagedata",
        columns: [
                {
                    name: 'JobNumber',
                    data: "job.number",
                    title: "Number",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'JobName',
                    data: "job.name",
                    title: "Job Name",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'title',
                    data: "question.title",
                    title: "Title",
                    sortable: true,
                    searchable: false
                },
                {
                    name: 'Name',
                    data: "question.body",
                    title: "Body",
                    sortable: true,
                    searchable: false
                },
                {
                    title: "Actions",
                    data: null, render: function (data, type, row) {
                        return '<div >' +
                            '<a class="btn btn-primary" href="/tenders/details/'+data.id +'">' +
                            'View' +
                            '</a>' +

                            '</div>';

                    },
                    sortable: false,
                    searchable: false
                }
            ]
        });
    </script>
}


